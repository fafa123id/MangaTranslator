{
  "manifest_version": 3,
  "name": "Manga Translator Spatial",
  "version": "2.3",
  "description": "Deteksi dan Translate Manga (CORS Fix)",
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "https://api.ocr.space/*",
    "https://translate.googleapis.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}